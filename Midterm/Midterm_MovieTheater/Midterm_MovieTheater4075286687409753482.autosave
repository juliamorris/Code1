int size = 100;

void setup(){
  background(0);
  size(500, 500);
}

void draw(){
 for(int i=0; i<size; i++){
   for(int j=0; j<size; j++){
      fill(255);
      rect(i*size, j*size, size, size);
       if(mousePressed && mouseX>=(i*size) && mouseX<(i+1)*size && mouseY>=(j*size) && mouseY<(j+1)*size){
          fill(0);
       }
   }
 }

}

